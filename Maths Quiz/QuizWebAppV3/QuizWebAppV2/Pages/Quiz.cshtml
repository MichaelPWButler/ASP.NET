@page
@model QuizWebAppV2.Pages.QuizModel
@{
}

<h1>Let The Games Begin</h1>

<h1 class="timer">Time Left:</h1>
<h1 id="timer" class="timer"></h1>


<form method="post">
    @for(var i = 0; i < Model.QuestionsForQuiz.Count; i++)
    {
        int QuestionNumber = i + 1;
        <h2>Question @QuestionNumber : </h2>
        <h3 class="question" >@Model.QuestionsForQuiz[i].ReturnFullQuestion()</h3>
        <input type = "number" class = "input-field" name="QuestionInput[@i]" required/>
    }
    <button class="submit-button" value=@Model.QuestionsForQuiz.Count id="NumberOfQuestionsForTimer">SUBMIT</button>
</form>

<script src="/timer.js"></script>

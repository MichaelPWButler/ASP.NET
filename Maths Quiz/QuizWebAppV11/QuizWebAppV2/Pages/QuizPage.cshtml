@page
@model QuizWebAppV2.Pages.QuizPageModel
@{
}

<div id="TopBorder"></div>
<div id="BottomBorder"></div>
<div id="RightBorder"></div>
<div id="LeftBorder"></div>

<h1>Let The Games Begin</h1>

<h1 class="timer">Time Left:</h1>
<h1 id="timer" class="timer"></h1>

<form method="post">
    @{int QuestionNum = Model.questionIndex + 1;}
    <h2>Question @QuestionNum : </h2>
    <h3 class="question">@(Model.quiz?.QuizQuestions[@Model.questionIndex].ReturnFullQuestion() ?? "")</h3>
    <input type="number" class="input-field" name="QuestionInput" required />
    <button class="submit-button" value=@(Model.quiz?.QuizQuestions.Count ?? 0) id="NumberOfQuestionsForTimer">SUBMIT</button>
</form>

<script src="/StupidBars.js"></script>
<script src="/timer.js"></script>

@page
@model QuizWebAppV2.Pages.ResultsPageModel
@{
}
<h1>The Number of questions you got right: @Model.correct</h1>
@if (Model.IncorrectAnswers.Count > 0)
{
    <h2>However you did get some wrong , @Model.IncorrectAnswers.Count , to be precise</h2>
    for (int i = 0; i < Model.IncorrectAnswers.Count; i++)
    {
        <h3>@Model.IncorrectAnswers[i]</h3>
    }
}
<br />
<br />
<a class="start-button" href="/Index">Restart</a>
<script>
    sessionStorage.removeItem("remainingSeconds");
</script>


@page
@using LessOrMoreGame.Models
@model LessOrMoreGame.Pages.LeaderboardModel
@{
}

<div class="container-fluid d-flex flex-column justify-content-center align-items-center" style="height: 100vh;">
    <div id="back-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
            <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1" />
        </svg>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
            @for (int position = 0; position < @Model._Leaderboard.Count(); position++)
            {
                <tr>
                    <th scope="row">@(position+1)</th>
                    <td>@Model._Leaderboard[position].Name</td>
                    <td>@Model._Leaderboard[position].Score</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@page
@model IndexModel
@{
    ViewData["Title"] = "My Portfolio";
}

<h2>Enter Your Trading212 API Key</h2>

<form method="post">
    <div class="mb-2">
        <input asp-for="ApiKey" class="form-control" placeholder="Paste your API key" />
        <span asp-validation-for="ApiKey" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Validate Key</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") mt-3">
        @Model.Message
    </div>
}